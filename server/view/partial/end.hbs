<script>
  // 下载按钮点击
  $(document).on('click', '.more', function() {
    $('#download-box').removeClass('dHide')
    $('#mask').removeClass('dHide')
  })
  $('#download').on('click', function() {
    $('#download-box').removeClass('dHide')
    $('#mask').removeClass('dHide')
  })
  // 浮层点击
  $('#mask').on('click', function() {
    $('#download-box').addClass('dHide')
    $('#mask').addClass('dHide')
    if($('#open').length > 0){
      $('#open').addClass('dHide')
    }
  })
</script>
{{> html-close }}